<di class="container">
	<h1>task List</h1>

	<%= link_to "タスクを追加する", new_task_path, class: "new-task" %>

	<table>
		<thead>
			<tr>
        <th>タスク</th>
        <td>アクション</td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
          <%= link_to "編集", edit_task_path(task), class: "edit" %>
          <%= link_to "削除", task_path(task), data: {turbo_method: :delete, turbo_confirm: '本当に削除していいですか？'}, class: "delete" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
